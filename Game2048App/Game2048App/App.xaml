<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game2048App.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--Tiles by value-->
            <Color x:Key="GameCell.Background:">#c8bbad</Color>
            
            <Color x:Key="GameCell.Background:2">#efe4da</Color>
            <Color x:Key="GameCell.Text:2">#70685f</Color>
            
            <Color x:Key="GameCell.Background:4">#ecdec6</Color>
            <Color x:Key="GameCell.Text:4">#76695f</Color>
            
            <Color x:Key="GameCell.Background:8">#ecac72</Color>
            <Color x:Key="GameCell.Text:8">#f4ecdc</Color>
            
            <!--Fallback Color (gratter than 2048)-->
            <Color x:Key="GameCell.Background:fallback">#464652</Color>
            <Color x:Key="GameCell.Text:fallback">#e8e8e5</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>